<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <ImageView
                android:id="@+id/gallery_photo_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gallery_photo_deco"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#44ffff00"
                app:layout_constraintTop_toTopOf="@id/gallery_photo_item"
                app:layout_constraintBottom_toBottomOf="@+id/gallery_photo_item"
                app:layout_constraintStart_toStartOf="@id/gallery_photo_item"
                app:layout_constraintEnd_toEndOf="@id/gallery_photo_item"
        >
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

